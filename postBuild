#!/bin/bash

# Enable Jupyter extensions for better interactivity
jupyter nbextension enable --py widgetsnbextension --sys-prefix
jupyter labextension install @jupyter-widgets/jupyterlab-manager

# Set up the Python path to include the current directory
echo "import sys; sys.path.append('.')" > ~/.ipython/profile_default/startup/00-add-cwd.py

# Make sure all notebooks can find the quantum_network modules
export PYTHONPATH="${PYTHONPATH}:${PWD}"

echo "Binder setup complete!"
